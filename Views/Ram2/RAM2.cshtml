@model List<eadPRoj.Models.Mobile>
@{
    ViewBag.Title = "RAM2";
}

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:50%;padding-bottom:2em;color:grey;"> Mobiles</h2>

<table style="margin-left:30%;border:1px solid grey;background-color:whitesmoke;height:60%;width:55%">
    <tr>
        <td style="padding:10px;border:1px solid grey;"><b>Mobile</b></td>
        <td style="padding: 10px;border: 1px solid grey;"><b>Image</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>Status</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>Price</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>Screen</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>RAM</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>Processor</b></td>
        <td style="padding: 10px; border: 1px solid grey;"><b>SIM</b></td>
    </tr>
    @foreach (var s in Model)
    {
        if (@s.RAM == 2)
        {
            <tr>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey;">@s.Name</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; "><img src="@s.Path" /></td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.Status</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.Price</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.Screen</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.RAM</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.Processor</td>
                <td style="padding: 25px; margin-left: 4px; border: 1px solid grey; ">@s.SIM</td>
            </tr>
        }
      
       
            
    }
</table>
